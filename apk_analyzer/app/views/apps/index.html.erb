<h1>All the apps</h1>


<div class="">
<table id="example" class="table table-striped table-bordered" >
  <thead>
    <th>Package</th>
    <th>RO</th>
    <th>Services</th>
    <th>Receivers</th>
    <th>Providers</th>
    <th>used permissions</th>
    <th>created permissions</th>
    <th>RECEIVE_BOOT_COMPLETED (<%= @apps.where(bootCompleted: true).size %>)</th>
    <th>Persistent (<%= @apps.where(persistent: true).size %>)</th>
  </thead>
  <tbody>
   <% @apps.each do |app|%>
   <tr>
     <td><%= app.package %></td>
     <td><%= app.hasRO %></td>
     <td><%= app.numOfServices %></td>
     <td><%= app.numOfReceivers %></td>
     <td><%= app.numOfProviders %></td>
     <td><%= app.usedPermissions %></td>
     <td><%= app.createdPermissions %></td>
     <td><%= app.bootCompleted %></td>
     <td><%= app.persistent %></td>
   </tr>
   <% end %>
   </tbody>
</table>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('#example').DataTable();
  });
</script>
